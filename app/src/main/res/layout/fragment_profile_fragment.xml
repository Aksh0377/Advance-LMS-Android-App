<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.axay.o2hleave.Profile_fragment">

    <!-- TODO: Update blank fragment layout -->


    <RelativeLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="197.50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/toolbar2"
        android:background="@drawable/demo1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/profile_picture"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/selifeicon"
            android:layout_marginRight="45dp"
            android:layout_marginEnd="45dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/imageButton7"
            android:layout_alignEnd="@+id/imageButton7" />

        <ImageButton
            android:id="@+id/imageButton7"
            style="@android:style/Widget.DeviceDefault.Light.ImageButton"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="25dp"
            android:layout_marginEnd="75dp"
            android:layout_marginRight="75dp"
            android:layout_weight="0.35"
            app:srcCompat="@android:drawable/ic_menu_camera" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout1"
        android:orientation="vertical"
        android:id="@+id/linearLayout">



        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">


            <EditText
                android:id="@+id/edit_ful_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:drawablePadding="20dp"
                android:drawableLeft="@drawable/pesron_symbol"
                android:hint="full name"
                android:layout_gravity="center" />
        </LinearLayout>



        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:hint="Email"
            android:id="@+id/edit_email"
            android:drawablePadding="20dp"
            android:drawableLeft="@drawable/email_black"
            android:layout_weight="0.73" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/edit_employee_code"
            android:hint="Employee code"
            android:drawablePadding="20dp"
            android:drawableLeft="@drawable/short_text"
            android:layout_weight="0.76" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">



        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/edit_designation"
            android:hint="Designation"
            android:drawablePadding="20dp"
            android:drawableLeft="@drawable/designation"
            android:layout_weight="0.75" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/edit_password"
            android:hint="password"
            android:drawablePadding="20dp"
            android:drawableLeft="@drawable/lock"
            android:layout_weight="0.75" />



    </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout"
        android:layout_marginTop="7dp"
        android:background="@color/o2hSecond"
        android:text="Button" />
</RelativeLayout>
